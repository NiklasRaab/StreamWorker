@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "form-inline"}))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav">
            <li class="nav-item active">
                @Html.ActionLink("Hallo " + User.Identity.GetUserName() + "!", "Index", "Manage", null, new {title = "Manage", @class = "nav-link"})
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">Abmelden</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            @Html.ActionLink("Registrieren", "Register", "Account", null, new {id = "registerLink", @class = "nav-link"})
        </li>
        <li class="nav-item">
            @Html.ActionLink("Anmelden", "Login", "Account", null, new {id = "loginLink", @class = "nav-link"})
        </li>
    </ul>
}