@model StreamWorker.ViewModels.Task.CreateTaskViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col">
        @using (Html.BeginForm("AddDescription", "Task"))
        {
        @*<form action="" method="post">*@
            <div class="row">
                <div class="col">In welcher Form möchtest du deine Aufgabe beschreiben:</div>
                <div class="col text-center">
                    <input type="submit" value="Text Editor" class="btn btn-secondary cancel" name="action:AddDescription"/>
                </div>
            </div>

            @Html.EditorFor(model => model.TimeLineEntryViewModels)

            <div class="form-group row">
                @Html.LabelFor(model => model.Price, new {@class = "col-form-label col-sm-3 col-lg-2"})
                <div class="col-sm-9 col-lg-10">
                    @Html.EditorFor(model => model.Price, new {htmlAttributes = new {@class = "form-control form-control-danger"}})
                </div>
            </div>
            <div class="form-group row ">
                <div class="offset-sm-10 col-sm-2 text-right">
                    <input type="submit" value="Veröffentlichen" class="btn btn-success" name="action:Save"/>
                </div>
            </div>
            <div class="alert-danger">
                @Html.ValidationSummary()
            </div>
        @*</form>*@
        }
    </div>
</div>